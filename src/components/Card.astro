---
interface Props {
	title: string;
	body: string;
	href: string;
	color: string;
}

const { href, title, body, color} = Astro.props;
---

<li class="link-card" style={`--card-color: ${color}`}>
	<a href={href}>
		<h2>
			{title}
			<span></span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>
<style>
	.link-card {
	  list-style: none;
	  display: flex;
	  justify-content: center;
	  align-items: center;
	  padding: 1px;
	  background-color: var(--card-color, #23262d);
	  background-image: none;
	  border-radius: 7px;
	  transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	  box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	  width: 100%;
	  height: 250px; /* Make the card square */
	}
  
	.link-card > a {
	  width: 100%;
	  height: 100%;
	  border-radius: 7px;
	  text-decoration: none;
	  color: white;
	  background-color: var(--card-color, #23262d);
	  opacity: 0.8;
	  display: flex;
	  flex-direction: column;
	  justify-content: center;
	  align-items: center;
	  text-align: center;
	}

	.link-card:is(:hover, :focus-within) {
	  background-position: 0;
	  background-image: var(--accent-gradient);
	}
  
	h2 {
	  margin: 0;
	  font-size: 1.5rem;
	  transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
  
	p {
	  margin-top: 0.5rem;
	  margin-bottom: 0;
	}
  
</style>